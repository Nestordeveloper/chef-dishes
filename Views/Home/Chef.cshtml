@{
    ViewData["Title"] = "Add Chef";
}
@model Chef;
<link rel="stylesheet" href="~/css/styles.css">
<div class="text-center">
    <a asp-controller="Home" asp-action="Index" class="link-offset-2 navContainer">Home</a>
    <a asp-controller="Home" asp-action="Dishes" class="link-offset-2 navContainer">Dishes</a>
    <a asp-controller="Home" asp-action="Chef" class="link-offset-2 navContainer">Add a Chef</a>
    <a asp-controller="Home" asp-action="Dish" class="link-offset-2 navContainer">Add a Dish</a>
</div>

<div class="text-center">
    <h1>Add a chef</h1>
</div>
<form asp-action="CreateChef" asp-controller="chefs" method="post">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="form-group col-cont">
                <div class="row">
                    <div class="col-md-4">
                        <label asp-for="FirstName">First Name</label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="FirstName" class="form-control" type="text">
                        <span asp-validation-for="FirstName"></span>
                    </div>
                </div>
            </div>
            <div class="form-group col-cont">
                <div class="row">
                    <div class="col-md-4">
                        <label asp-for="LastName">Last Name:</label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="LastName" class="form-control" type="text">
                        <span asp-validation-for="LastName"></span>
                    </div>
                </div>
            </div>
            <div class="form-group col-cont">
                <div class="row">
                    <div class="col-md-4">
                        <label asp-for="DateOfBirth">Date of Birth</label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="DateOfBirth" class="form-control" type="date">
                        <span asp-validation-for="DateOfBirth"></span>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-start">
                <button class="btn btnAddChef">Add Chef</button>
            </div>
        </div>
    </div>
</form>
