@{
    ViewData["Title"] = "Add Dish";
}
@model Dish;
<link rel="stylesheet" href="~/css/styles.css">
<div class="text-center">
    <a asp-controller="Home" asp-action="Index" class="link-offset-2 navContainer">Chefs</a>
    <a asp-controller="Home" asp-action="Dishes" class="link-offset-2 navContainer">Dishes</a>
    <a asp-controller="Home" asp-action="Chef" class="link-offset-2 navContainer">Add a Chef</a>
    <a asp-controller="Home" asp-action="Dish" class="link-offset-2 navContainer">Add a Dish</a>
</div>

<div class="text-center">
    <h1>Add a dish</h1>
</div>
<form asp-action="CreateDish" asp-controller="Home" method="post">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group col-cont">
                <label asp-for="Name">Name of Dish</label>
                <input asp-for="Name" class="form-control" type="text">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group col-cont">
                <label asp-for="Calories"># of Calories</label>
                <input asp-for="Calories" class="form-control" type="number" min="0" default="0">
                <span asp-validation-for="Calories"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group col-cont">
                <label asp-for="ChefId">Chef Name</label>
                <select asp-for="ChefId" class="form-select" id="ChefId">
                    <option value="">Select Chef</option>
                    @foreach (var chefItem in (List<SelectListItem>)ViewBag.ChefList)
                    {
                        <option value="@chefItem.Value">@chefItem.Text</option>
                    }
                </select>
                <span asp-validation-for="ChefId"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group col-cont">
                <label asp-for="Tastiness">Tastiness</label>
                <select asp-for="Tastiness" class="form-select" name="Tastiness" id="Tasty">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <span asp-validation-for="Tastiness"></span>
            </div>
            <div class="d-flex justify-content-end">
                <button class="btn btnAddDish">Add Dish</button>
            </div>
        </div>
    </div>
</form>